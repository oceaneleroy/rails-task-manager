<h1> MY TASKS 📝</h1>

<ul>
  <% @tasks.each do |task| %>
  <% if task.completed == true %>
  <% completed = "✔️" %>
  <% else %>
  <% completed = "🗹" %>
    <% end %>
  <li><%= completed %> <%= link_to task.title, task_path(task.id) %></li>
  <% end %>
</ul>

<%= link_to "➕ Add a new task", tasks_new_path %>

